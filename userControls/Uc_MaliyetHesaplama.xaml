<UserControl x:Class="MaliyeHesaplama.userControls.Uc_MaliyetHesaplama"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaliyeHesaplama.mvvm"
             xmlns:helpers="clr-namespace:MaliyeHesaplama.helpers"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <local:MainViewModel/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <helpers:StringDotHelper x:Key="StringDotHelper"/>
    </UserControl.Resources>
    <!--<UserControl.ContextMenu>
        <ContextMenu FontFamily="Bahnschrift">
                <MenuItem x:Name="cmRaporAc" Click="cmRaporAc_Click" Header="Maliyet Formu"/>
            </ContextMenu> bu alan Stackpanele eklenecek
    </UserControl.ContextMenu>-->
    <StackPanel Margin="0,0,0,0">
        <Border BorderThickness="0.5" BorderBrush="#ececec">
            <DockPanel HorizontalAlignment="Left" Margin="2">
                <Button Click="btnYeni_Click" x:Name="btnYeni" Width="60" Height="55" Background="Transparent" BorderThickness="0.32" BorderBrush="Gray" Margin="0,0,2,0" Cursor="Hand">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Width="24" Height="24" Source="/userControls/new.ico" />
                        <TextBlock Text="Yeni" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnKayit" Click="btnKayit_Click" Width="60" Height="55" Background="Transparent" BorderThickness="0.32" BorderBrush="Gray" Margin="0,0,2,0" Cursor="Hand">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Width="24" Height="24" Source="/userControls/save.ico" />
                        <TextBlock Text="Kaydet" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnListe" Click="btnListe_Click" Width="60" Height="55" Background="Transparent" BorderThickness="0.32" BorderBrush="Gray" Margin="0,0,2,0" Cursor="Hand">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Width="24" Height="24" Source="/userControls/list.ico" />
                        <TextBlock Text="Liste" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnSil" Click="btnSil_Click" Width="60" Height="55" Background="Transparent" BorderThickness="0.32" BorderBrush="Gray" Margin="0,0,2,0" Cursor="Hand">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Width="24" Height="24" Source="/userControls/trash.ico" />
                        <TextBlock Text="Sil" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
            </DockPanel>
        </Border>
        <!-- buttonlar -->
        <Grid Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border>
                <StackPanel>
                    <DockPanel Margin="0,2,0,2">
                        <TextBlock Width="70" Text="Fiş No :" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtFisNo" IsEnabled="False" Width="148" Height="24" VerticalContentAlignment="Center"/>
                        <TextBlock/>
                    </DockPanel>
                    <DockPanel>
                        <TextBlock VerticalAlignment="Center" Width="70" Text="Tarih :"/>
                        <DatePicker x:Name="dpTarih" Width="148" HorizontalAlignment="Left" Height="24" VerticalContentAlignment="Center"/>
                    </DockPanel>
                    <DockPanel Margin="0,2,0,0">
                        <TextBlock VerticalAlignment="Center" Width="70" Text="Firma Kodu :"/>
                        <TextBox x:Name="txtFirmaKodu" Width="124" HorizontalAlignment="Left" Height="24" VerticalContentAlignment="Center"/>
                        <Button Click="btnFirmaListesi_Click" x:Name="btnFirmaListesi" Content="🔎" Background="Transparent" Width="24" HorizontalAlignment="Left"/>
                        <Label x:Name="txtFirmaUnvan" Content=""/>
                    </DockPanel>
                    <DockPanel Margin="0,2,0,0">
                        <TextBlock VerticalAlignment="Center" Width="70" Text="Ürün Kodu :"/>
                        <TextBox x:Name="txtMalzemeKodu" Width="124" HorizontalAlignment="Left" Height="24" VerticalContentAlignment="Center"/>
                        <Button Click="btnMalzemeListesi_Click" x:Name="btnMalzemeListesi" Margin="0,1,0,0" Content="🔎" Background="Transparent" Width="24" HorizontalAlignment="Left"/>
                        <Label x:Name="lblMalzemeAdi" Content=""/>
                    </DockPanel>
                    <DockPanel x:Name="dckRecete" Margin="0,2,0,0">
                        <TextBlock VerticalAlignment="Center" Width="70" Text="Reçete No :"/>
                        <TextBox Width="124" HorizontalAlignment="Left" Height="24" VerticalContentAlignment="Center"/>
                        <Button Margin="0,.5,0,0" Content="🔎" Background="Transparent" Width="24" HorizontalAlignment="Left"/>
                        <Label Content=""/>
                    </DockPanel>
                </StackPanel>
            </Border>
            <Border Grid.Column="1">
                <GroupBox Header="Ürün Resmi" Width="200" HorizontalAlignment="Left">
                    <DockPanel>
                        <Button Content="Seç" x:Name="selectImage" Click="selectImage_Click"/>
                        <Image x:Name="productImage" Width="150" Height="100"/>
                    </DockPanel>
                </GroupBox>
            </Border>
        </Grid>
        <!-- buttonlar -->
        <DockPanel>
            <!-- Üretim bilgileri groupbox -->
            <Border>
                <GroupBox Header="Üretim Bilgileri">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <DockPanel Grid.Row="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Border>
                                    <StackPanel>
                                        <!-- Üretim Bilgileri - İplik Bilgileri -->
                                        <TextBlock Text="İplik Bilgileri" Background="LightGray" Margin="0,0,0,2"/>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Çözgü 1 :"/>
                                            <TextBox x:Name="txtCozgu1IpBilBolen" Text="{Binding Cozgu1IpBilBolen,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" Width="30" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True" />
                                            <TextBlock Text="/"/>
                                            <TextBox x:Name="txtCozgu1IpBilBolunen" Text="{Binding Cozgu1IpBilBolunen,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" Width="30" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True"/>
                                            <TextBox x:Name="txtCozgu1IpBilSonuc" Text="{Binding Cozgu1IpBilSonuc,Mode=OneWay}" FontSize="11" TextAlignment="Center" Width="40" IsEnabled="False"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Çözgü 2 :"/>
                                            <TextBox x:Name="txtCozgu2IpBilBolen" Text="{Binding Cozgu2IpBilBolen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" Width="30" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True"/>
                                            <TextBlock Text="/"/>
                                            <TextBox x:Name="txtCozgu2IpBilBolunen" Text="{Binding Cozgu2IpBilBolunen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" Width="30" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True"/>
                                            <TextBox x:Name="txtCozgu2IpBilSonuc" Text="{Binding Cozgu2IpBilSonuc, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextAlignment="Center" IsEnabled="False" Width="40"/>
                                        </DockPanel>
                                        <DockPanel Tag="Divide" Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Atkı 1 :"/>
                                            <TextBox x:Name="txtAtki1IpBilBolen" Text="{Binding Atki1IpBilBolen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" Width="30" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True"/>
                                            <TextBlock Text="/"/>
                                            <TextBox x:Name="txtAtki1IpBilBolunen" Text="{Binding Atki1IpBilBolunen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" Width="30" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True"/>
                                            <TextBox x:Name="txtAtki1IpBilSonuc" Text="{Binding Atki1IpBilSonuc, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" IsEnabled="False" Width="40"/>
                                        </DockPanel>
                                        <DockPanel Tag="Divide" Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Atkı 2 :"/>
                                            <TextBox x:Name="txtAtki2IpBilBolen" Text="{Binding Atki2IpBilBolen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" Width="30" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True"/>
                                            <TextBlock Text="/"/>
                                            <TextBox x:Name="txtAtki2IpBilBolunen" Text="{Binding Atki2IpBilBolunen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" Width="30" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True"/>
                                            <TextBox x:Name="txtAtki2IpBilSonuc" Text="{Binding Atki2IpBilSonuc, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" IsEnabled="False" Width="40"/>
                                        </DockPanel>
                                        <DockPanel Tag="Divide" Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Atkı 3 :"/>
                                            <TextBox x:Name="txtAtki3IpBilBolen" Text="{Binding Atki3IpBilBolen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" Width="30" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True"/>
                                            <TextBlock Text="/"/>
                                            <TextBox x:Name="txtAtki3IpBilBolunen" Text="{Binding Atki3IpBilBolunen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" Width="30" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True"/>
                                            <TextBox x:Name="txtAtki3IpBilSonuc" Text="{Binding Atki3IpBilSonuc, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" IsEnabled="False" Width="40"/>
                                        </DockPanel>
                                        <DockPanel Tag="Divide" Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Atkı 4 :"/>
                                            <TextBox x:Name="txtAtki4IpBilBolen" Text="{Binding Atki4IpBilBolen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" Width="30" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True"/>
                                            <TextBlock Text="/"/>
                                            <TextBox x:Name="txtAtki4IpBilBolunen" Text="{Binding Atki4IpBilBolunen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" Width="30" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True"/>
                                            <TextBox x:Name="txtAtki4IpBilSonuc" Text="{Binding Atki4IpBilSonuc, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" IsEnabled="False" Width="40"/>
                                        </DockPanel>
                                    </StackPanel>
                                </Border>
                                <Border Grid.Column="1" Margin="4,0">
                                    <StackPanel>
                                        <!-- Üretim Bilgileri - Sıklıklar -->
                                        <TextBlock Text="Sıklıklar" Background="LightGray" Margin="0,0,0,2"/>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Çözgü 1 :"/>
                                            <TextBox x:Name="txtCozgu1Siklik" Text="{Binding Cozgu1Siklik,Mode=OneWay}" FontSize="11" TextAlignment="Center" Width="36" Margin="2,0" IsEnabled="False"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Çözgü 2 :"/>
                                            <TextBox x:Name="txtCozgu2Siklik" Text="{Binding Cozgu2Siklik,Mode=OneWay}" FontSize="11" TextAlignment="Center" Width="36" Margin="2,0" IsEnabled="False"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Atkı 1 :"/>
                                            <TextBox x:Name="txtAtki1Siklik" Text="{Binding Atki1Siklik, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" Width="36" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Atkı 2 :"/>
                                            <TextBox x:Name="txtAtki2Siklik" Text="{Binding Atki2Siklik, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" Width="36" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Atkı 3 :"/>
                                            <TextBox x:Name="txtAtki3Siklik" Text="{Binding Atki3Siklik, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" Width="36" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Atkı 4 :"/>
                                            <TextBox x:Name="txtAtki4Siklik" Text="{Binding Atki4Siklik, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" Width="36" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True"/>
                                        </DockPanel>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </DockPanel>
                        <DockPanel Grid.Row="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Border>
                                    <StackPanel>
                                        <!-- Üretim Bilgileri - Dokuma Bilgileri -->
                                        <TextBlock Text="Dokuma Bilgileri" Background="LightGray" Margin="0,0,0,2"/>
                                        <DockPanel Tag="Multiply" Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="T.No 1 :"/>
                                            <TextBox x:Name="txtTarakNo1Carpan" Text="{Binding TarakNo1Carpan,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" Width="30" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True" />
                                            <TextBlock Text="X"/>
                                            <TextBox x:Name="txtTarakNo1Carpim" Text="{Binding TarakNo1Carpim,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" Width="30" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True"/>
                                            <TextBox x:Name="txtTarakNo1Sonuc" Text="{Binding TarakNo1Sonuc, Mode=OneWay}" Width="40" IsEnabled="False"/>
                                        </DockPanel>

                                        <!-- İkinci satır -->
                                        <DockPanel Tag="Multiply" Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="T.No 2 :"/>
                                            <TextBox x:Name="txtTarakNo2Carpan" Text="{Binding TarakNo2Carpan,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" Width="30" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True"/>
                                            <TextBlock Text="X"/>
                                            <TextBox x:Name="txtTarakNo2Carpim" Text="{Binding TarakNo2Carpim,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" Width="30" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True"/>
                                            <TextBox x:Name="txtTarakNo2Sonuc" Text="{Binding TarakNo2Sonuc, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Width="40" IsEnabled="False"/>
                                        </DockPanel>
                                        <DockPanel Tag="Divide_1.05" Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Tarak En :"/>
                                            <TextBox x:Name="txtTarakEn" Text="{Binding TarakEn, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Ham Boy :"/>
                                            <TextBox x:Name="txtHamBoy" Text="{Binding HamBoy, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Boy Saçak :"/>
                                            <TextBox x:Name="txtBoySacakText" Text="{Binding BoySacakText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="En Saçak :"/>
                                            <TextBox x:Name="txtEnSacakText" Text="{Binding EnSacakText, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="11" TextAlignment="Center" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Ham En :"/>
                                            <TextBox x:Name="txtHamEn" Text="{Binding HamEn,Mode=OneWay}" FontSize="11" TextAlignment="Center" Margin="2,0" IsEnabled="False"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Mam. Boy :"/>
                                            <TextBox x:Name="txtMamulBoy" Text="{Binding MamulBoy,Mode=OneWay}" FontSize="11" TextAlignment="Center" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Mam. En :"/>
                                            <TextBox x:Name="txtMamulEn" Text="{Binding MamulEn,Mode=OneWay}" FontSize="11" TextAlignment="Center" Margin="2,0" helpers:FocusHelper.SelectAllTextOnFocus="True"/>
                                        </DockPanel>
                                    </StackPanel>
                                </Border>
                                <Border Grid.Column="1" Margin="4,0">
                                    <StackPanel>
                                        <!-- Üretim Bilgileri - Tel Sayıları -->
                                        <TextBlock Text="Tel Sayıları" Background="LightGray" Margin="0,0,0,2"/>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Çözgü 1 :"/>
                                            <TextBox x:Name="txtCozgu1TelSay" Text="{Binding Cozgu1TelSay, Mode=OneWay}" IsEnabled="False" FontSize="11" TextAlignment="Center" Width="36" Margin="2,0"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Çözgü 2 :"/>
                                            <TextBox x:Name="txtCozgu2TelSay" Text="{Binding Cozgu2TelSay, Mode=OneWay}" IsEnabled="False" FontSize="11" TextAlignment="Center" Width="36" Margin="2,0"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Atkı 1 :"/>
                                            <TextBox x:Name="txtAtki1TelSay" Text="{Binding Atki1TelSay, Mode=OneWay}" IsEnabled="False" FontSize="11" TextAlignment="Center" Width="36" Margin="2,0"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Atkı 2 :"/>
                                            <TextBox x:Name="txtAtki2TelSay" Text="{Binding Atki2TelSay, Mode=OneWay}" IsEnabled="False" FontSize="11" TextAlignment="Center" Width="36" Margin="2,0"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Atkı 3 :"/>
                                            <TextBox x:Name="txtAtki3TelSay" Text="{Binding Atki3TelSay, Mode=OneWay}" IsEnabled="False" FontSize="11" TextAlignment="Center" Width="36" Margin="2,0"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Atkı 4 :"/>
                                            <TextBox x:Name="txtAtki4TelSay" Text="{Binding Atki4TelSay, Mode=OneWay}" IsEnabled="False" FontSize="11" TextAlignment="Center" Width="36" Margin="2,0"/>
                                        </DockPanel>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </DockPanel>
                    </Grid>
                </GroupBox>
            </Border>
            <!-- Üretim hesaplama groupbox -->
            <Border>
                <GroupBox Header="Üretim Hesaplama">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <DockPanel Grid.Row="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Border>
                                    <StackPanel>
                                        <!-- Üretim Bilgileri - İplik Bilgileri -->
                                        <TextBlock Text="Gramaj Hesaplama" Background="LightGray" Margin="0,0,0,2"/>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Çözgü 1 :"/>
                                            <TextBox x:Name="txtCozgu1Gramaj" Text="{Binding Cozgu1Gramaj,Mode=OneWay, StringFormat=N3}" IsEnabled="False" FontSize="11" TextAlignment="Center" Width="44" HorizontalAlignment="Left" Margin="2,0"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Çözgü 2 :"/>
                                            <TextBox x:Name="txtCozgu2Gramaj" Text="{Binding Cozgu2Gramaj,Mode=OneWay, StringFormat=N3}" IsEnabled="False" FontSize="11" TextAlignment="Center" Width="44" HorizontalAlignment="Left" Margin="2,0"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Atkı 1 :"/>
                                            <TextBox x:Name="txtAtki1Gramaj" Text="{Binding Atki1Gramaj,Mode=OneWay, StringFormat=N3}" IsEnabled="False" FontSize="11" TextAlignment="Center" Width="44" HorizontalAlignment="Left" Margin="2,0"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Atkı 2 :"/>
                                            <TextBox x:Name="txtAtki2Gramaj" Text="{Binding Atki2Gramaj,Mode=OneWay, StringFormat=N3}" IsEnabled="False" FontSize="11" TextAlignment="Center" Width="44" HorizontalAlignment="Left" Margin="2,0"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Atkı 3 :"/>
                                            <TextBox x:Name="txtAtki3Gramaj" Text="{Binding Atki3Gramaj,Mode=OneWay, StringFormat=N3}" IsEnabled="False" FontSize="11" TextAlignment="Center" Width="44" HorizontalAlignment="Left" Margin="2,0"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Atkı 4 :"/>
                                            <TextBox x:Name="txtAtki4Gramaj" Text="{Binding Atki4Gramaj,Mode=OneWay, StringFormat=N3}" IsEnabled="False" FontSize="11" TextAlignment="Center" Width="44" HorizontalAlignment="Left" Margin="2,0"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,0,0,2">
                                            <TextBlock VerticalAlignment="Center" Width="60" Text="Toplam :"/>
                                            <TextBox x:Name="txtToplamGramaj" Text="{Binding ToplamGramaj,Mode=OneWay, StringFormat=N3}" IsEnabled="False" FontSize="11" TextAlignment="Center" Width="44" Margin="2,0"/>
                                            <TextBlock FontSize="10" VerticalAlignment="Center" Text="M.Tül/Gr"/>
                                        </DockPanel>
                                    </StackPanel>
                                </Border>
                                <Border Grid.Column="1" Margin="4,0">
                                    <StackPanel>
                                        <!-- Üretim Bilgileri - İplik Boyamaları -->
                                        <TextBlock Text="İplik Boyamaları" Background="LightGray" Margin="0,0,0,2"/>
                                        <DockPanel Margin="0,0,0,2">
