<UserControl x:Class="MaliyeHesaplama.userControls.UC_RaporOlusturma"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaliyeHesaplama.userControls"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
            xmlns:common="clr-namespace:MaliyeHesaplama.userControls.Common"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <common:ButtonBar x:Name="ButtonBar" DockPanel.Dock="Top" Grid.Row="0"/>
        <GroupBox Grid.Row="1" Header="Rapor Bilgileri" Padding="5">
            <DockPanel HorizontalAlignment="Left">
                <StackPanel Margin="0,0,5,0">
                    <DockPanel>
                        <TextBlock Text="Rapor Adı :" Width="75" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtRaporAdi" Width="200" Margin="0,0,0,5" Height="24" VerticalContentAlignment="Center"/>
                    </DockPanel>
                    <DockPanel>
                        <TextBlock Text="Ekran Adı :" Width="75" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtEkranAdi" Height="24" VerticalContentAlignment="Center"/>
                    </DockPanel>
                </StackPanel>
                <DockPanel>
                    <Button x:Name="btnDizayn" Margin="0,0,5,0" Click="btnDizayn_Click" Content="Dizayn" Width="50" Background="Transparent"/>
                    <Button x:Name="frTest" Margin="0,0,5,0" Click="frTest_Click" Content="Fast Report" Background="Transparent"/>
                    <Button x:Name="frView" Margin="0,0,5,0" Click="frView_Click" Content="Fast Göster" Background="Transparent"/>
                </DockPanel>
            </DockPanel>
        </GroupBox>
        <GroupBox Header="Veri Kaynağı İsimleri" Grid.Row="2">
            <StackPanel>
                <DockPanel HorizontalAlignment="Left" Width="200" Margin="0,0,0,2">
                    <TextBlock Text="Sorgu 1 : " Width="55"/>
                    <TextBox x:Name="vkSorgu1" />
                </DockPanel>
                <DockPanel HorizontalAlignment="Left" Width="200" Margin="0,0,0,2">
                    <TextBlock Text="Sorgu 2 : " Width="55"/>
                    <TextBox x:Name="vkSorgu2"/>
                </DockPanel>
                <DockPanel HorizontalAlignment="Left" Width="200" Margin="0,0,0,2">
                    <TextBlock Text="Sorgu 3 : " Width="55"/>
                    <TextBox x:Name="vkSorgu3"/>
                </DockPanel>
                <DockPanel HorizontalAlignment="Left" Width="200" Margin="0,0,0,2">
                    <TextBlock Text="Sorgu 4 : " Width="55"/>
                    <TextBox x:Name="vkSorgu4"/>
                </DockPanel>
                <DockPanel HorizontalAlignment="Left" Width="200" Margin="0,0,0,2">
                    <TextBlock Text="Sorgu 5 : " Width="55"/>
                    <TextBox x:Name="vkSorgu5"/>
                </DockPanel>
            </StackPanel>
        </GroupBox>
        <GroupBox Grid.Row="3" Header="Rapor Sorguları" Padding="5">
            <TabControl x:Name="xxxx">
                <TabItem Header="Sorgu 1">
                    <avalonedit:TextEditor
                        x:Name="sorgu1edit"
                        ShowLineNumbers="True"
                        FontFamily="Consolas"
                        FontSize="14"
                        SyntaxHighlighting="SQL"
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Auto"
                        />
                </TabItem>
                <TabItem Header="Sorgu 2">
                    <avalonedit:TextEditor
                        x:Name="sorgu2edit"
                        ShowLineNumbers="True"
                        FontFamily="Consolas"
                        FontSize="14"
                        SyntaxHighlighting="SQL"
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Auto"
        />
                </TabItem>
                <TabItem Header="Sorgu 3">
                    <avalonedit:TextEditor
                        x:Name="sorgu3edit"
                        ShowLineNumbers="True"
                        FontFamily="Consolas"
                        FontSize="14"
                        SyntaxHighlighting="SQL"
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Auto"
        />
                </TabItem>
                <TabItem Header="Sorgu 4">
                    <avalonedit:TextEditor
                        x:Name="sorgu4edit"
                        ShowLineNumbers="True"
                        FontFamily="Consolas"
                        FontSize="14"
                        SyntaxHighlighting="SQL"
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Auto"
        />
                </TabItem>
                <TabItem Header="Sorgu 5">
                    <avalonedit:TextEditor
                        x:Name="sorgu5edit"
                        ShowLineNumbers="True"
                        FontFamily="Consolas"
                        FontSize="14"
                        SyntaxHighlighting="SQL"
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Auto"
        />
                </TabItem>
            </TabControl>
        </GroupBox>
    </Grid>
</UserControl>
