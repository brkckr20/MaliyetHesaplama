<UserControl x:Class="MaliyeHesaplama.userControls.UC_MalzemeKarti"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaliyeHesaplama.userControls"
             xmlns:common="clr-namespace:MaliyeHesaplama.userControls.Common"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0">
            <common:ButtonBar x:Name="ButtonBar" DockPanel.Dock="Top" />
        </Border>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="0" Margin="0,0,5,0">
                <Border Width="340">
                    <StackPanel>
                        <DockPanel Margin="0,1">
                            <Label Content="Malzeme Kodu :"  Width="95"/>
                            <TextBox x:Name="txtKodu" VerticalContentAlignment="Center"/>
                        </DockPanel>
                        <DockPanel Margin="0,0,0,1">
                            <Label Content="Malzeme Adı :" Width="95"/>
                            <TextBox x:Name="txtAdi" VerticalContentAlignment="Center"/>
                        </DockPanel>
                    </StackPanel>
                </Border>
            </DockPanel>
            <Border Grid.Column="1">
                <StackPanel>
                    <CheckBox Content="Kullanımda" IsChecked="True" x:Name="chkKullanimda"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
