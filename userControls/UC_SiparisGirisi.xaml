<UserControl x:Class="MaliyeHesaplama.userControls.UC_SiparisGirisi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaliyeHesaplama.userControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderThickness="0.5" BorderBrush="#ececec">
            <DockPanel HorizontalAlignment="Left" Margin="2">
                <Button Click="btnYeni_Click" x:Name="btnYeni" Width="60" Height="55" Background="Transparent" BorderThickness="0.32" BorderBrush="Gray" Margin="0,0,2,0" Cursor="Hand">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Width="24" Height="24" Source="/userControls/new.ico" />
                        <TextBlock Text="Yeni" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnKayit" Click="btnKayit_Click" Width="60" Height="55" Background="Transparent" BorderThickness="0.32" BorderBrush="Gray" Margin="0,0,2,0" Cursor="Hand">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Width="24" Height="24" Source="/userControls/save.ico" />
                        <TextBlock Text="Kaydet" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnListe" Click="btnListe_Click" Width="60" Height="55" Background="Transparent" BorderThickness="0.32" BorderBrush="Gray" Margin="0,0,2,0" Cursor="Hand">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Width="24" Height="24" Source="/userControls/list.ico" />
                        <TextBlock Text="Liste" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <Button Click="btnGeri_Click" x:Name="btnGeri" Width="60" Height="55" Background="Transparent" BorderThickness="0.32" BorderBrush="Gray" Margin="0,0,2,0" Cursor="Hand">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Width="24" Height="24" Source="/userControls/back.ico" />
                        <TextBlock Text="Önceki" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <Button Click="btnIleri_Click" x:Name="btnIleri" Width="60" Height="55" Background="Transparent" BorderThickness="0.32" BorderBrush="Gray" Margin="0,0,2,0" Cursor="Hand">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Width="24" Height="24" Source="/userControls/next.ico" />
                        <TextBlock Text="Sonraki" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnRapor" Click="btnRapor_Click" Width="60" Height="55" Background="Transparent" BorderThickness="0.32" BorderBrush="Gray" Margin="0,0,2,0" Cursor="Hand">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Width="24" Height="24" Source="/userControls/printer.ico" />
                        <TextBlock Text="Yazdır" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnSil" Click="btnSil_Click" Width="60" Height="55" Background="Transparent" BorderThickness="0.32" BorderBrush="Gray" Margin="0,0,2,0" Cursor="Hand">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Width="24" Height="24" Source="/userControls/trash.ico" />
                        <TextBlock Text="Sil" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
            </DockPanel>
        </Border>
        <Border Grid.Row="1">
            <StackPanel>
                <GroupBox Header="Genel Bilgiler   ">
                    <StackPanel>
                        <DockPanel HorizontalAlignment="Left" >
                            <TextBlock VerticalAlignment="Center" Text="Fiş / Sipariş No : " Width="90"/>
                            <TextBox x:Name="txtFisNo" Width="200" Height="24" VerticalContentAlignment="Center"/>
                        </DockPanel>
                        <DockPanel HorizontalAlignment="Left" Margin="0,4">
                            <TextBlock VerticalAlignment="Center" Text="Tarih : " Width="90" />
                            <DatePicker x:Name="dpTarih" Width="200" VerticalContentAlignment="Center" />
                        </DockPanel>
                        <DockPanel HorizontalAlignment="Left">
                            <TextBlock VerticalAlignment="Center" Text="Firma Ünvan :" Width="90" />
                            <TextBox x:Name="txtFirmaUnvan" Width="176" VerticalContentAlignment="Center" Height="24"/>
                            <Button Click="btnFirmaListesi_Click" x:Name="btnFirmaListesi" Content="🔎" Background="Transparent" Width="24" HorizontalAlignment="Left"/>
                        </DockPanel>
                        <DockPanel HorizontalAlignment="Left" Margin="0,4">
                            <TextBlock VerticalAlignment="Center" Text="Firma Yetkilisi :" Width="90" />
                            <TextBox x:Name="txtYetkili" Width="200" VerticalContentAlignment="Center" Height="24"/>
                        </DockPanel>
                        <DockPanel HorizontalAlignment="Left">
                            <TextBlock VerticalAlignment="Center" Text="Termin :" Width="90" />
                            <DatePicker x:Name="dpTermin" Width="200" VerticalContentAlignment="Center" Height="24"/>
                        </DockPanel>
                        <DockPanel HorizontalAlignment="Left" Margin="0,4">
                            <TextBlock VerticalAlignment="Center" Text="Vade Gün :" Width="90"/>
                            <TextBox x:Name="txtVade" Width="200" VerticalContentAlignment="Center" Height="24"/>
                        </DockPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Border>
        <DataGrid Grid.Row="2"/>
        <Border Grid.Row="3">
            
        </Border>
    </Grid>
</UserControl>
