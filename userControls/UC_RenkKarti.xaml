<UserControl x:Class="MaliyeHesaplama.userControls.UC_RenkKarti"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaliyeHesaplama.userControls"
             xmlns:common="clr-namespace:MaliyeHesaplama.userControls.Common"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" FontFamily="Bahnschrift Light">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <common:ButtonBar x:Name="ButtonBar" DockPanel.Dock="Top" Grid.Row="0"/>
        <StackPanel Grid.Row="1" Background="White">
            <DockPanel>
                <GroupBox Header="Renk Türü" Width="225">
                    <DockPanel>
                        <RadioButton Name="rbKumas" Content="Kumaş" Checked="RadioButton_Checked" Margin="0,0,5,0"/>
                        <RadioButton Name="rbIplik" Content="İplik" Checked="RadioButton_Checked"/>
                    </DockPanel>                   
                </GroupBox>
                <CheckBox x:Name="chckKullanimda" Content="Kullanımda" Margin="5,14,0,0" IsChecked="True"/>
            </DockPanel>
            <DockPanel HorizontalAlignment="Left" Margin="0,4,0,0">
                <TextBlock Text="Kodu : " Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="txtKodu" Width="163" VerticalContentAlignment="Center" Height="20"/>
            </DockPanel>
            <DockPanel HorizontalAlignment="Left" Margin="0,4,0,0">
                <TextBlock Text="Adı : " Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="txtAdi" Width="163" VerticalContentAlignment="Center" Height="20"/>
            </DockPanel>
            <DockPanel HorizontalAlignment="Left" Margin="0,4,0,0" >
                <TextBlock Text="Açıklama : " Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="txtAciklama" Width="163" VerticalContentAlignment="Center" Height="20"/>
            </DockPanel>
            <DockPanel HorizontalAlignment="Left" Margin="0,4,0,0" >
                <TextBlock Text="Renk : " Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="txtRenk" Width="163" VerticalContentAlignment="Center" Height="20"/>
            </DockPanel>
            <DockPanel HorizontalAlignment="Left" Margin="0,4,0,0" >
                <TextBlock Text="Pantone No : " Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPantoneNo" Width="163" VerticalContentAlignment="Center" Height="20"/>
            </DockPanel>
            <DockPanel HorizontalAlignment="Left" Margin="0,4,0,0" >
                <TextBlock Text="Firma : " Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="txtFirmaUnvan" Width="143" VerticalContentAlignment="Center" Height="20"/>
                <Button x:Name="btnFirmaListesi" Click="btnFirmaListesi_Click" Width="20" Content="🔎" Background="Transparent" Foreground="Gray" BorderBrush="Gray" BorderThickness=".4" VerticalContentAlignment="Center"/>
            </DockPanel>
            <DockPanel HorizontalAlignment="Left" Margin="0,4,0,0" >
                <TextBlock Text="Talep Tarihi : " Width="80" VerticalAlignment="Center"/>
                <DatePicker x:Name="dpTalepTarihi" Width="163" VerticalContentAlignment="Center" />
            </DockPanel>
            <DockPanel HorizontalAlignment="Left" Margin="0,4,0,0" >
                <TextBlock Text="Okey Tarihi : " Width="80" VerticalAlignment="Center"/>
                <DatePicker x:Name="dpOkeyTarihi" Width="163" VerticalContentAlignment="Center" />
            </DockPanel>
            <DockPanel HorizontalAlignment="Left" Margin="0,4,0,0" >
                <TextBlock Text="Fiyat : " Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="txtFiyat" Width="80" Margin="0,0,3,0" VerticalContentAlignment="Center"  Height="20"/>
                <ComboBox x:Name="cmbDovizListesi" Width="80" VerticalContentAlignment="Center"  Height="20"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</UserControl>
