<UserControl x:Class="MaliyeHesaplama.userControls.UC_FirmaKarti"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaliyeHesaplama.userControls"
             xmlns:common="clr-namespace:MaliyeHesaplama.userControls.Common"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="Transparent">
        <StackPanel.ContextMenu>
            <ContextMenu FontFamily="Bahnschrift">
                <MenuItem x:Name="cmSonNoAktar" Click="cmSonNoAktar_Click" Header="Son numarayı yansıt"/>
            </ContextMenu>
        </StackPanel.ContextMenu>
        <Border Grid.Row="0">
            <common:ButtonBar x:Name="ButtonBar" DockPanel.Dock="Top" />
        </Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="0" Margin="0,0,5,0">
                <Border Width="340">
                    <StackPanel>
                        <DockPanel Margin="0,1">
                            <Label Content="Firma Kodu :"  Width="95"/>
                            <TextBox x:Name="txtFirmaKodu"/>
                        </DockPanel>
                        <DockPanel Margin="0,0,0,1">
                            <Label Content="Firma Ünvan :" Width="95"/>
                            <TextBox x:Name="txtFirmaUnvan"/>
                        </DockPanel>
                        <DockPanel Margin="0,0,0,1">
                            <Label Content="Adres 1 :" Width="95"/>
                            <TextBox x:Name="txtAdres1"/>
                        </DockPanel>
                        <DockPanel Margin="0,0,0,1">
                            <Label Content="Adres 2 :" Width="95"/>
                            <TextBox x:Name="txtAdres2"/>
                        </DockPanel>
                        <DockPanel Margin="0,0,0,1">
                            <Label Content="Adres 3 :" Width="95"/>
                            <TextBox x:Name="txtAdres3"/>
                        </DockPanel>
                    </StackPanel>
                </Border>
                <Border Height="10"></Border>
            </DockPanel>
        </Grid>
    </StackPanel>
</UserControl>
