<UserControl x:Class="MaliyeHesaplama.userControls.UC_FirmaKarti"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaliyeHesaplama.userControls"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Border BorderThickness="0.5" BorderBrush="#ececec">
            <DockPanel HorizontalAlignment="Left" Margin="2">
                <Button x:Name="btnYeni" Width="50" Height="55" Background="Transparent" BorderThickness="0.32" BorderBrush="Gray" Margin="0,0,2,0" Cursor="Hand">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Width="24" Height="24" Source="/userControls/new.ico" />
                        <TextBlock Text="Yeni" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnKayit" Click="btnKayit_Click" Width="50" Height="55" Background="Transparent" BorderThickness="0.32" BorderBrush="Gray" Margin="0,0,2,0" Cursor="Hand">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Width="24" Height="24" Source="/userControls/save.ico" />
                        <TextBlock Text="Kaydet" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <!--
                <Button x:Name="btnListe" Width="50" Height="55" Background="Transparent" BorderThickness="0.32" BorderBrush="Gray" Margin="0,0,2,0" Cursor="Hand">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Width="24" Height="24" Source="/userControls/list.ico" />
                        <TextBlock Text="Liste" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button> -->
                <Button x:Name="btnGeri" Width="50" Height="55" Background="Transparent" BorderThickness="0.32" BorderBrush="Gray" Margin="0,0,2,0" Cursor="Hand">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Width="24" Height="24" Source="/userControls/back.ico" />
                        <TextBlock Text="Önceki" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnIleri" Width="50" Height="55" Background="Transparent" BorderThickness="0.32" BorderBrush="Gray" Margin="0,0,2,0" Cursor="Hand">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Width="24" Height="24" Source="/userControls/next.ico" />
                        <TextBlock Text="Sonraki" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnSil" Click="btnSil_Click" Width="50" Height="55" Background="Transparent" BorderThickness="0.32" BorderBrush="Gray" Margin="0,0,2,0" Cursor="Hand">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Width="24" Height="24" Source="/userControls/trash.ico" />
                        <TextBlock Text="Sil" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
            </DockPanel>
        </Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="0" Margin="0,0,5,0">
                <Border Width="250">
                    <StackPanel>
                        <DockPanel Margin="0,1">
                            <Label Content="Firma Kodu :"  Width="83"/>
                            <TextBox x:Name="txtFirmaKodu"/>
                        </DockPanel>
                        <DockPanel Margin="0,0,0,1">
                            <Label Content="Firma Ünvan :" Width="83"/>
                            <TextBox x:Name="txtFirmaUnvan"/>
                        </DockPanel>
                        <DockPanel Margin="0,0,0,1">
                            <Label Content="Adres 1 :" Width="83"/>
                            <TextBox x:Name="txtAdres1"/>
                        </DockPanel>
                        <DockPanel Margin="0,0,0,1">
                            <Label Content="Adres 2 :" Width="83"/>
                            <TextBox x:Name="txtAdres2"/>
                        </DockPanel>
                        <DockPanel Margin="0,0,0,1">
                            <Label Content="Adres 3 :" Width="83"/>
                            <TextBox x:Name="txtAdres3"/>
                        </DockPanel>
                    </StackPanel>
                </Border>
                <Border Height="10"></Border>
            </DockPanel>
            <DockPanel Grid.Column="1">
                <syncfusion:SfDataGrid 
                    x:Name="sfDataGrid" 
                    AutoGenerateColumns="True" 
                    AllowFiltering="True" 
                    AllowSorting="True" 
                    FilterRowPosition="Top"                    
                    AllowResizingColumns="True"
                    RowHeight="20"
                    FontSize="11"
                    RowSelectionBrush="Orange"
                    SelectionForegroundBrush="White"
                    SelectionChanged="sfDataGrid_SelectionChanged"
                    >
                </syncfusion:SfDataGrid>
            </DockPanel>
        </Grid>
    </StackPanel>
</UserControl>
