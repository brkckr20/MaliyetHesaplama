<UserControl x:Class="MaliyeHesaplama.userControls.UC_Numarator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaliyeHesaplama.userControls"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderThickness="0.5" BorderBrush="#ececec">
            <DockPanel HorizontalAlignment="Left" Margin="2">
                <Button Click="btnYeni_Click" x:Name="btnYeni" Width="50" Height="55" Background="Transparent" BorderThickness="0.32" BorderBrush="Gray" Margin="0,0,2,0" Cursor="Hand">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Width="24" Height="24" Source="/userControls/new.ico" />
                        <TextBlock Text="Yeni" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnKayit" Click="btnKayit_Click" Width="50" Height="55" Background="Transparent" BorderThickness="0.32" BorderBrush="Gray" Margin="0,0,2,0" Cursor="Hand">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Width="24" Height="24" Source="/userControls/save.ico" />
                        <TextBlock Text="Kaydet" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <Button Click="btnListe_Click" x:Name="btnListe" Width="50" Height="55" Background="Transparent" BorderThickness="0.32" BorderBrush="Gray" Margin="0,0,2,0" Cursor="Hand">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Width="24" Height="24" Source="/userControls/list.ico" />
                        <TextBlock Text="Liste" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <Button IsEnabled="False" x:Name="btnGeri" Width="50" Height="55" Background="Transparent" BorderThickness="0.32" BorderBrush="Gray" Margin="0,0,2,0" Cursor="Hand">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Width="24" Height="24" Source="/userControls/back.ico" />
                        <TextBlock Text="Önceki" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <Button IsEnabled="False" x:Name="btnIleri" Width="50" Height="55" Background="Transparent" BorderThickness="0.32" BorderBrush="Gray" Margin="0,0,2,0" Cursor="Hand">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Width="24" Height="24" Source="/userControls/next.ico" />
                        <TextBlock Text="Sonraki" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <Button Click="btnSil_Click" x:Name="btnSil" Width="50" Height="55" Background="Transparent" BorderThickness="0.32" BorderBrush="Gray" Margin="0,0,2,0" Cursor="Hand">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Width="24" Height="24" Source="/userControls/trash.ico" />
                        <TextBlock Text="Sil" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
            </DockPanel>
        </Border>
        <StackPanel Grid.Row="1" Margin="5,5,0,0">
            <DockPanel HorizontalAlignment="Left" Margin="0,0,0,3">
                <TextBlock Text="Ön Ek :" Width="90" VerticalAlignment="Center"/>
                <TextBox x:Name="txtOnEk" MaxLength="3" Width="150" Height="20"/>
                <TextBlock Text=" ** 3 harf olmalıdır" Foreground="Red"/>
            </DockPanel>
            <DockPanel HorizontalAlignment="Left" Margin="0,0,0,3">
                <TextBlock Text="Numara :" Width="90" Height="20" VerticalAlignment="Center"/>
                <TextBox x:Name="txtNumara" Width="150"/>
                <TextBlock Text=" *" Foreground="Red"/>
            </DockPanel>
            <DockPanel HorizontalAlignment="Left" Margin="0,0,0,3">
                <TextBlock Text="İsim :" Width="90" VerticalAlignment="Center"/>
                <TextBox x:Name="txtIsim" Width="150" Height="20"/>
                <TextBlock Text=" *" Foreground="Red"/>
            </DockPanel>
            <DockPanel HorizontalAlignment="Left" Margin="0,0,0,3">
                <TextBlock Text="Malzeme Türü :" Width="90" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbTur" Width="150" Height="20">
                    <ComboBoxItem Content=""/>
                    <ComboBoxItem Content="Kumaş"/>
                    <ComboBoxItem Content="İplik"/>
                    <ComboBoxItem Content="Aksesuar"/>
                </ComboBox>
                <TextBlock Text=" *" Foreground="Red"/>
            </DockPanel>
            <DockPanel HorizontalAlignment="Left" Margin="0,0,0,3" VerticalAlignment="Center">
                <TextBlock Text="Kullanımda :" Width="90"/>
                <CheckBox x:Name="chckKullanimda" IsChecked="True"/>
            </DockPanel>
        </StackPanel>
        <Border Grid.Row="2">
            <!--<syncfusion:SfDataGrid
                x:Name="sfDataGrid" 
                AutoGenerateColumns="True" 
                AllowFiltering="True" 
                AllowSorting="True" 
                FilterRowPosition="Top"                    
                AllowResizingColumns="True"
                RowHeight="20"
                FontSize="11"
                RowSelectionBrush="Orange"
                SelectionForegroundBrush="White"
                CellTapped="sfDataGrid_CellTapped"
>
            </syncfusion:SfDataGrid>-->
        </Border>
    </Grid>
</UserControl>
