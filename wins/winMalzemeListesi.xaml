<Window x:Class="MaliyeHesaplama.wins.winMalzemeListesi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaliyeHesaplama.wins"
        mc:Ignorable="d"
        xmlns:control="clr-namespace:FilterDataGrid;assembly=FilterDataGrid"
        Title="" Height="450" Width="750" WindowStartupLocation="CenterScreen" FontFamily="Bahnschrift Light" Loaded="Window_Loaded" Icon="/wins/News.png"
        Closing="Window_Closing"
        >
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <control:FilterDataGrid
    x:Name="grid" FontSize="12" VerticalContentAlignment="Center" IsReadOnly="True"
    GridLinesVisibility="All" HorizontalGridLinesBrush="#ececec" VerticalGridLinesBrush="#ececec"
    FilterLanguage="Turkish" ShowStatusBar="True" AutoGenerateColumns="True"
    AutoGeneratingColumn="FilterDataGrid_AutoGeneratingColumn" MouseDoubleClick="grid_MouseDoubleClick"
    ColumnReordered="grid_ColumnReordered"
    >
            <control:FilterDataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Kolon Seçicisi" Click="MenuItem_Click"/>
                    <Separator/>
                    <MenuItem Header="Excel'e Aktar" Click="ExportToExcel_Click"/>
                </ContextMenu>
            </control:FilterDataGrid.ContextMenu>
        </control:FilterDataGrid>
    </Grid>
</Window>
