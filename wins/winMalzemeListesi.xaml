<Window x:Class="MaliyeHesaplama.wins.winMalzemeListesi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaliyeHesaplama.wins"
        mc:Ignorable="d"
        xmlns:control="clr-namespace:FilterDataGrid;assembly=FilterDataGrid"
        Title="" Height="450" Width="750" WindowStartupLocation="CenterScreen" FontFamily="Bahnschrift Light" Loaded="Window_Loaded" Icon="/wins/News.png"
        Closing="Window_Closing"
        >
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <control:FilterDataGrid
            Grid.Row="0" FontSize="12" VerticalContentAlignment="Center" IsReadOnly="True"
            GridLinesVisibility="All" HorizontalGridLinesBrush="#ececec" VerticalGridLinesBrush="#ececec"
            FilterLanguage="Turkish" ShowStatusBar="True" ShowRowsCount="True" ShowElapsedTime="True"
            AutoGenerateColumns="True" AutoGeneratingColumn="FilterDataGrid_AutoGeneratingColumn" x:Name="grid"
            MouseDoubleClick="grid_MouseDoubleClick"
            >
            <control:FilterDataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="mColChooser" Header="Kolon Seçicisini Aç" Click="mColChooser_Click"/>
                </ContextMenu>
            </control:FilterDataGrid.ContextMenu>
        </control:FilterDataGrid>
    </Grid>
</Window>
