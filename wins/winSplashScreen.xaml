<Window x:Class="MaliyeHesaplama.wins.winSplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="400" Height="300"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False" FontFamily="Bahnschrift">
    <Border Background="#FFFFFF"
        CornerRadius="20"
        BorderBrush="#E0E0E0"
        BorderThickness="1"
        Padding="30"
        >

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Maliyet Hesaplama"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   HorizontalAlignment="Center"
                   />

            <TextBlock Text="Yükleniyor..."
                   FontSize="16"
                   Foreground="#7F8C8D"
                   HorizontalAlignment="Center"
                   />

            <Grid Width="300" Height="20" Margin="0,10,0,0">
                <Border Background="#ECECEC"
                    CornerRadius="10"/>

                <ProgressBar IsIndeterminate="True"
                         Background="Transparent"
                         Foreground="#3498db"
                         BorderThickness="0"
                         />
            </Grid>

        </StackPanel>
    </Border>

</Window>
