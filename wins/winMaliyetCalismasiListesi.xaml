<Window x:Class="MaliyeHesaplama.wins.winMaliyetCalismasiListesi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaliyeHesaplama.wins"
        xmlns:control="clr-namespace:FilterDataGrid;assembly=FilterDataGrid"
        mc:Ignorable="d"
        Title="Maliyet Çalışmaları Listesi" Height="450" Width="800" WindowStartupLocation="CenterScreen" FontFamily="Bahnschrift Light" Loaded="Window_Loaded" Icon="/wins/News.png">
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <control:FilterDataGrid
            x:Name="grid" FontSize="12" VerticalContentAlignment="Center" IsReadOnly="True"
            GridLinesVisibility="All" HorizontalGridLinesBrush="#ececec" VerticalGridLinesBrush="#ececec"
            FilterLanguage="Turkish" ShowStatusBar="True" AutoGenerateColumns="True"
            AutoGeneratingColumn="grid_AutoGeneratingColumn" MouseDoubleClick="sfDataGrid_MouseDoubleClick"
            ColumnReordered="grid_ColumnReordered"
            >
            <control:FilterDataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Kolon Seçicisi" Click="MenuItem_Click"/>
                    <Separator/>
                    <MenuItem Header="Excel'e Aktar" Click="ExportToExcel_Click"/>
                </ContextMenu>
            </control:FilterDataGrid.ContextMenu>
        </control:FilterDataGrid>
    </Grid>
</Window>
