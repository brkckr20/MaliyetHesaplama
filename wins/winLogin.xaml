<Window x:Class="MaliyeHesaplama.wins.winLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Giriş" Height="250" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel Width="320">
            <TextBlock Text="Kullanıcı Adı"
               FontSize="14"
               FontWeight="SemiBold"
               Foreground="#2C3E50"/>
            <DockPanel VerticalAlignment="Center">
                <Label Content="👨‍⚖️" FontSize="16"/>
                <ComboBox x:Name="cmbUsername" Width="250"
                      Margin="0,5,0,0" Height="30" Padding="6" Background="#F4F6F7"
                      BorderBrush="#D0D3D4" BorderThickness="1" Foreground="#2C3E50"
                      FontSize="12">
                    <ComboBox.Items>
                        <ComboBoxItem Content="admin"/>
                        <ComboBoxItem Content="personel1"/>
                        <ComboBoxItem Content="personel2"/>
                    </ComboBox.Items>
                </ComboBox>
            </DockPanel>
            <DockPanel>
                <TextBlock Text="🌂"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="#2C3E50"/>
                <PasswordBox x:Name="txtPassword"
     Margin="0,2,0,0"
     Height="30"
     Padding="6"
     Background="#F4F6F7"
     BorderBrush="#D0D3D4"
     BorderThickness="1"
     Foreground="#2C3E50"
     FontSize="10"
                             Width="250"
     />
            </DockPanel>
            
            

            

            <!-- Giriş Butonu -->
            <Button Content="Giriş"
                    Margin="0,5,0,0"
            Height="40"
            Width="120"
            HorizontalAlignment="Right"
            Background="#3498DB"
            Foreground="White"
            FontSize="15"
            FontWeight="SemiBold"
            BorderThickness="0"
            Cursor="Hand"
            Click="BtnLogin_Click">
            </Button>

        </StackPanel>
    </Grid>
</Window>
