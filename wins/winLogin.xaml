<Window x:Class="MaliyeHesaplama.wins.winLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kullanıcı Giriş" Height="240" Width="400" WindowStartupLocation="CenterScreen" FontFamily="Bahnschrift Light" ResizeMode="NoResize" Icon="/wins/Building.png">
    <Grid Margin="20">
        <StackPanel Width="320">
            <TextBlock Text="Giriş Bilgileri"
               FontSize="14"
               FontWeight="SemiBold"
               Foreground="#2C3E50"/>
            <DockPanel VerticalAlignment="Center">
                <Label Content="👥" FontSize="16" Width="30" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbUsername" DisplayMemberPath="FullName" SelectedValuePath="Id"
                      Margin="0,5,0,0" Height="30" Padding="6" Background="#F4F6F7"
                      BorderBrush="#D0D3D4" BorderThickness="1" Foreground="#2C3E50"
                      FontSize="14">
                </ComboBox>
            </DockPanel>
            <DockPanel Margin="0,5,0,0">
                <TextBlock Text="🔑"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="#2C3E50" Width="30" VerticalAlignment="Center"/>
                <PasswordBox x:Name="txtPassword" Margin="0,2,0,0" Height="30" Padding="6"
                            Background="#F4F6F7" BorderBrush="#D0D3D4" BorderThickness="1"
                            Foreground="#2C3E50" FontSize="10"/>
            </DockPanel>
            <StackPanel HorizontalAlignment="Right" Margin="0,5,0,0">
                <CheckBox Content="Beni Hatırla" VerticalContentAlignment="Center" x:Name="chkRememberMe"/>
            </StackPanel>
            <Button Content="Giriş" Margin="0,5,0,0" Height="40" Width="120" HorizontalAlignment="Right"
                    Background="#3498DB" Foreground="White" FontSize="15" FontWeight="SemiBold"
                    BorderThickness="0" Cursor="Hand" Click="BtnLogin_Click">
            </Button>
        </StackPanel>
    </Grid>
</Window>
