<Window x:Class="MaliyeHesaplama.wins.winRaporSecimi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaliyeHesaplama.wins"
        mc:Ignorable="d"
        Title="Rapor Seçim Ekranı" Height="120" Width="320" Icon="/wins/News.png" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" FontFamily="Bahnschrift">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0">
            <ComboBox x:Name="cmbRaporlar" Width="285" Height="24" VerticalContentAlignment="Center">
                <ComboBoxItem Content="Rapor seçiniz" IsSelected="True" IsEnabled="False" Height="24"/>
            </ComboBox>
        </Border>
        <Border Grid.Row="1" Padding="0,0,10,0">
            <DockPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button x:Name="btnTamam" Click="btnTamam_Click" VerticalContentAlignment="Center" Background="Transparent" Width="50" Height="26" Margin="0,0,5,0" Content="Tamam"/>
                <Button x:Name="btnIptal" Click="btnIptal_Click" VerticalContentAlignment="Center" Background="Transparent" Width="50" Content="İptal"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>
