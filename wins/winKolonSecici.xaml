        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaliyeHesaplama.wins"
        mc:Ignorable="d"
        Title="Kolon Seçicisi" Height="450" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="/wins/News.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=" *"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderBrush="#ececec" BorderThickness="1">
            <ListBox x:Name="lstColumns" Margin="2"/>
        </Border>
        <Button Click="Button_Click" Background="Transparent" Grid.Row="1" Content="Kaydet Kapat" Padding="5" Margin="0,0,4,2" HorizontalAlignment="Right"/>
    </Grid>
</Window>
