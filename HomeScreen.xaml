<Window x:Class="MaliyeHesaplama.HomeScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaliyeHesaplama"
        mc:Ignorable="d"
        Title="Maliyet Hesaplama" ResizeMode="CanResize" FontFamily="Bahnschrift Light" Height="450" Width="800" WindowState="Maximized" Icon="/Purchase Order.png" WindowStyle="None">
    <Window.Resources>
        <Style x:Key="HeaderMenuTabStyle" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid Margin="-2">
                            <Border x:Name="TabBorder" 
                                Background="#ececec" 
                                CornerRadius="3" 
                                Padding="8,4">
                                <DockPanel>
                                    <TextBlock x:Name="HeaderText"
                                           Text="{TemplateBinding Header}" 
                                           FontWeight="Bold" 
                                           Foreground="Black"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                    <Button Content="❌" 
                                        Width="20" 
                                        Height="20"
                                        VerticalAlignment="Center"
                                        Click="CloseTab_Click"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="Black"
                                        FontWeight="Bold"
                                        ToolTip="Sekmeyi kapat"/>
                                </DockPanel>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Seçili Tab -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="TabBorder" Property="Background" Value="#FFBF00"/>
                                <Setter TargetName="HeaderText" Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome 
            CaptionHeight="0"
            ResizeBorderThickness="5"
            GlassFrameThickness="0"
            CornerRadius="0"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#1E90FF" MouseLeftButtonDown="Border_MouseLeftButtonDown" MouseMove="TitleBar_MouseMove">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Maliyet Hesaplama" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="20"/>
                <DockPanel Grid.Column="1" Margin="7,0">
                    <Button x:Name="btnAppMinimize" Click="btnAppMinimize_Click" FontSize="20" Foreground="White" Content="━" Background="Transparent" Width="28" BorderBrush="Transparent" BorderThickness="0"/>
                    <Button x:Name="btnAppMaximize" Click="btnAppMaximize_Click" Foreground="White" Content="🗖" Background="Transparent" Width="28" BorderBrush="Transparent" BorderThickness="0"/>
                    <Button x:Name="btnAppClose"
                            Click="btnAppClose_Click"
                            Width="32"
                            Content="✖"
                            Foreground="White"
                            BorderThickness="0"
                            Background="Transparent"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="0">
                                    <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                                </Border>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="Red"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#CC0000"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </DockPanel>
            </Grid>
        </Border>
        <Grid Grid.Row="1">             
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Background="#212121" Grid.Column="0" Panel.ZIndex="10" Padding="16,0">
            <StackPanel>
                <TextBlock Text="Menü" Foreground="White" FontSize="16" Margin="0,8,0,4"/>
                <Button Content="🧣 Üretim Yönetimi" Style="{StaticResource MenuButtonStyle}" Click="UretimYonetimi_Click"/>
                <Button Content="📇 Kartlar" Style="{StaticResource MenuButtonStyle}" Click="Kartlar_Click"/>
                <Button Content="🧾 Reçete Tanımlamaları" Style="{StaticResource MenuButtonStyle}" Click="ReceteTanimlamalari_Click"/>
                <Button Content="📦 Malzeme Yönetimi" Style="{StaticResource MenuButtonStyle}" Click="MalzemeYonetimi_Click"/>
                <Button Content="⚙️ Ayarlar" Style="{StaticResource MenuButtonStyle}" Click="Ayarlar_Click"/>
            </StackPanel>
        </Border>
        <Grid Grid.Column="1" Background="#FDFDF8" MouseDown="ContentArea_MouseDown">
                <TabControl x:Name="MainTabControl" Margin="0" Padding="2,4,0,0" BorderThickness="0" TabStripPlacement="Top">
                    <TabControl.ItemContainerStyle>
                        <Style BasedOn="{StaticResource HeaderMenuTabStyle}" TargetType="TabItem"/>
                    </TabControl.ItemContainerStyle>
                </TabControl>
                <Border x:Name="MegaMenuPanel" Background="#191919" Width="220" VerticalAlignment="Stretch"
                    HorizontalAlignment="Left" Padding="5" Visibility="Collapsed" Panel.ZIndex="1"
                    RenderTransformOrigin="0,0">
                <Border.RenderTransform>
                    <TranslateTransform x:Name="MegaMenuTransform" X="-250"/>
                </Border.RenderTransform>
                <StackPanel>
                    <TextBlock x:Name="MegaMenuTitle" Foreground="White" FontSize="14" Margin="10,0"/>
                    <ItemsControl x:Name="MegaMenuItems">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding}"
                                        Style="{StaticResource MenuButtonStyle}"
                                        Click="MegaMenuItem_Click"
                                        />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>
        </Grid>
    </Grid>
</Window>
