<Window x:Class="MaliyeHesaplama.HomeScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaliyeHesaplama"
        mc:Ignorable="d"
        Title="Maliyet Hesaplama" FontFamily="Bahnschrift" Height="450" Width="800" WindowState="Maximized" Icon="/Purchase Order.png">
    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid Margin="-2">
                            <Border Background="#ececec" CornerRadius="3" Padding="8,4">
                                <DockPanel>
                                    <TextBlock Text="{TemplateBinding Header}" 
                                       FontWeight="Bold" 
                                       Foreground="Black"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                                    <Button Content="❌" 
                                    Width="20" 
                                    Height="20"
                                    VerticalAlignment="Center"
                                    Click="CloseTab_Click"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="Black"
                                    FontWeight="Bold"
                                    ToolTip="Sekmeyi kapat"/>
                                </DockPanel>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Background="#234C6A" Grid.Column="0" Panel.ZIndex="10" Padding="6,0">
            <StackPanel>
                <TextBlock Text="Menü" Foreground="White" FontSize="16" Margin="0,8,0,4"/>
                <Button Content="🧣 Üretim Yönetimi" Style="{StaticResource MenuButtonStyle}" Click="UretimYonetimi_Click"/>
                <Button Content="📇 Kartlar" Style="{StaticResource MenuButtonStyle}" Click="Kartlar_Click"/>
                <Button Content="⚙️ Ayarlar" Style="{StaticResource MenuButtonStyle}"/>
            </StackPanel>
        </Border>
        <Grid Grid.Column="1" Background="#FDFDF8" MouseDown="ContentArea_MouseDown">
            <TabControl x:Name="MainTabControl" Margin="0" Padding="0" BorderThickness="0" TabStripPlacement="Top"/>
            <Border x:Name="MegaMenuPanel" Background="#2F5F84" Width="220" VerticalAlignment="Stretch"
                    HorizontalAlignment="Left" Padding="5" Visibility="Collapsed" Panel.ZIndex="1"
                    RenderTransformOrigin="0,0">
                <Border.RenderTransform>
                    <TranslateTransform x:Name="MegaMenuTransform" X="-250"/>
                </Border.RenderTransform>
                <StackPanel>
                    <TextBlock x:Name="MegaMenuTitle" Foreground="White" FontSize="14" Margin="10,0"/>
                    <ItemsControl x:Name="MegaMenuItems">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding}"
                                        Style="{StaticResource MenuButtonStyle}"
                                        Click="MegaMenuItem_Click"
                                        />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
